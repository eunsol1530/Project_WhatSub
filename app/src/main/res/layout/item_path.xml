<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:padding="8dp">

    <TextView
        android:id="@+id/search_total_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 시간: "
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:visibility="visible"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/search_total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 비용: "
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/search_total_time"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:visibility="visible"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/search_transfers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="환승 정보: "
        android:textSize="16sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/search_total_cost"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="8dp"
        android:visibility="visible"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>