<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_path"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/start_location"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/img_home_search_back"
            android:text="출발지"
            android:inputType="text"
            android:gravity="center"
            android:layout_marginTop="45dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/btn_exchange"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_search_exchange"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/exchange_button"
            app:layout_constraintStart_toEndOf="@id/start_location"
            app:layout_constraintEnd_toStartOf="@id/destination_location"
            app:layout_constraintTop_toTopOf="@id/start_location"
            app:layout_constraintBottom_toBottomOf="@id/destination_location" />

        <EditText
            android:id="@+id/destination_location"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:background="@drawable/img_home_search_back"
            android:text="도착지"
            android:inputType="text"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="45dp"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/sort_background_vi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#DDEFFA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_path" />

    <LinearLayout
        android:id="@+id/sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/sort_background_vi"
        app:layout_constraintBottom_toBottomOf="@id/sort_background_vi">

        <TextView
            android:id="@+id/sort_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:letterSpacing="0.05"
            app:layout_constraintEnd_toStartOf="@id/sort_way_dropdown"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/sort_way_dropdown"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_search_sort_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/select_sort_option"
            app:layout_constraintStart_toEndOf="@id/sort_way"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/research_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="재탐색"
        android:letterSpacing="0.1"
        app:layout_constraintTop_toTopOf="@id/sort"
        app:layout_constraintBottom_toBottomOf="@id/sort"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="75dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPath"
            android:layout_width="match_parent"
            android:layout_height="520dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/sort_background_vi"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:elevation="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
